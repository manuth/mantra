{
    "name": "manuth/mantra",
    "version": "0.0.0",
    "type": "silverstripe-theme",
    "description": "The theme of the nuth.ch-website",
    "authors": [
        {
            "name": "Manuel Thalmann",
            "email": "m@nuth.ch"
        }
    ],
    "keywords": [
        "SilverStripe",
        "Theme",
        "m@nuth",
        "mantra"
    ],
    "license": "MIT",
    "scripts-descriptions": {
        "clean": "Cleans the development-environment",
        "build": "Builds the project",
        "watch": "Builds the project in watch-mode",
        "initialize": "Initializes the development-environment",
        "symlinks": "Creates all symbolic links required for testing the theme"
    },
    "scripts": {
        "clean": [
            "npm run clean"
        ],
        "build": [
            "npm run build"
        ],
        "watch": [
            "npm run watch"
        ],
        "initialize": [
            "npm run initialize"
        ],
        "symlinks": [
            "npm run symlinks"
        ]
    },
    "require": {},
    "require-dev": {
        "neronmoon/scriptsdev": "^0.1.6"
    },
    "extra": {
        "scripts-dev": {
            "post-install-cmd": [
                "npm install",
                "@clean",
                "@initialize",
                "composer --working-dir=./test/website install"
            ]
        }
    }
}
